<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:gravity="center_vertical|start"
    android:orientation="horizontal"
    android:background="@color/white_night">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="@dimen/track_image_size"
        android:layout_height="@dimen/track_image_size"
        android:layout_marginStart="@dimen/padding_16"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/iconPadding_10"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistName"
            style="@style/TrackNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Playlist Name: LOOOOOOOOOOOOOOONG NAME OF TRACK" />

        <TextView
            android:id="@+id/playlistTrackCount"
            style="@style/TrackArtistAndTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Number of Tracks" />

    </LinearLayout>

</LinearLayout>
