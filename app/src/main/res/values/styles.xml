<?xml version="1.0" encoding="utf-8"?>

<resources>



    <style name="ButtonMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/title_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/textColor</item>
        <item name="iconPadding">@dimen/iconPadding_10</item>
        <item name="cornerRadius">@dimen/cornerRadius_16</item>
        <item name="iconGravity">textStart</item>

    </style>

    <style name="ToolBarButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>

    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_Regular_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/padding_10</item>
        <item name="android:layout_marginEnd">@dimen/padding_10</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/title_22</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">38dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="drawableTint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_Regular_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:hint">@string/button_search</item>
    </style>

    <style name="SearchCancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:src">@drawable/clear_button</item>
        <item name="android:visibility">gone</item>
    </style>



</resources>
