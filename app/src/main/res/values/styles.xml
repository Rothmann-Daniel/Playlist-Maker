<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ButtonMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/title_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/textColor</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="cornerRadius">@dimen/cornerRadius_16</item>
        <item name="iconGravity">textStart</item>

    </style>

    <style name="ToolBarButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>

    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_Regular_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/padding_10</item>
        <item name="android:layout_marginEnd">@dimen/padding_10</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/title_22</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">38dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="drawableTint">@color/hint_color</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_Regular_16</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:hint">@string/button_search</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchCancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:src">@drawable/clear_button</item>
        <item name="drawableTint">@color/hint_color</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TrackNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">15</item>

    </style>

    <style name="TrackArtistAndTimeText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">15</item>
    </style>

    <style name="DotSeparatorStyle">
        <item name="android:src">@drawable/dot_separator</item>
    </style>

    <style name="ArrowForwardIconStyle">
        <item name="android:src">@drawable/arrow_forward_right_light</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>


    <style name="NotFoundIconStyle">
        <item name="android:src">@drawable/not_found</item>
    </style>

    <style name="NotFoundTextStyle">
        <item name="android:text">@string/text_not_found</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ImageErrorStyle">
        <item name="android:src">@drawable/no_connection</item>
    </style>

    <style name="ButtonUpdateStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:text">@string/button_update</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="historyTitle" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="clear_history_button" >
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="AudioPlayerTrackDescription">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AudioPlayerTrackValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColor_AudioPlayer</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MediaFavoriteFragment">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AddPlayList">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_24</item>
        <item name="android:backgroundTint">@color/btn_Play_Stop</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>


    <style name="Tabs.TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_and_white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Tabs.TextAppearance</item>
        <item name="tabTextColor">@color/dark_and_white</item>
        <item name="tabSelectedTextColor">@color/dark_and_white</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>
