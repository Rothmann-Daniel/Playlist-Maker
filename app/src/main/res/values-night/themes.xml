        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.Light">

        <item name="buttonSettings">@color/buttonSettings</item>
